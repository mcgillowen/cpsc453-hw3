viewer: viewer.o Loader.o VertexArray.o IndexedVertexArray.o Program.o Texture.o
	g++ -std=c++14 -o viewer viewer.o Loader.o VertexArray.o IndexedVertexArray.o Program.o Texture.o -framework OpenGL `pkg-config --static --libs glfw3`

viewer.o: viewer.cpp
	g++ -std=c++14 -c viewer.cpp -framework OpenGL `pkg-config --static --libs glfw3`

Loader.o: Loader.cpp
	g++ -std=c++14 -c Loader.cpp -framework OpenGL `pkg-config --static --libs glfw3`

VertexArray.o: VertexArray.cpp
	g++ -std=c++14 -c VertexArray.cpp -framework OpenGL `pkg-config --static --libs glfw3`

IndexedVertexArray.o: IndexedVertexArray.cpp
	g++ -std=c++14 -c IndexedVertexArray.cpp -framework OpenGL `pkg-config --static --libs glfw3`

Program.o: Program.cpp
	g++ -std=c++14 -c Program.cpp -framework OpenGL `pkg-config --static --libs glfw3`

Texture.o: Texture.cpp
	g++ -std=c++14 -c Texture.cpp -framework OpenGL `pkg-config --static --libs glfw3`

clean:
	rm viewer viewer.o Loader.o VertexArray.o IndexedVertexArray.o Program.o Texture.o
